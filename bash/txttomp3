# Check arguments
if [ -z "$1" ]; then
	printf "\nUsage: $0 <path to pdf file to convert>\n\n"
	exit
fi

# Create the file
txtname=$1
mp3name=$(echo $txtname | sed 's/txt/mp3/')
echo Input: $txtname
echo Output: $mp3name
cat "$txtname" | /usr/local/src/piper/piper --model /usr/local/src/piper/voices/en_US-libritts-high.onnx --output_raw --sentence_silence 0.1 | lame -r -m m -s 22.05 --bitwidth 16 --signed --little-endian - "$mp3name"
